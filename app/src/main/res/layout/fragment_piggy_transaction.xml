<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/piggyFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Fragments.PiggyTransactionFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/kasadurumu"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="79dp"
            android:fontFamily="@font/raleway_bold"
            android:text="To open the lid, please slide it to the right."
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/coverSwitch"
            android:layout_width="373dp"
            android:layout_height="136dp"


            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="241dp"
            app:ss_iconSize="50dp"
            app:ss_leftIcon="@drawable/lock"
            app:ss_leftText="Lock"
            app:ss_rightIcon="@drawable/unlock"
            app:ss_rightText="Unlock"
            app:ss_selectedTextSize="30sp"
            app:ss_sliderBackgroundColor="@color/colorPrimary"
            app:ss_switchColor="@color/colorPrimaryDark"
            app:ss_textColor="@color/colorPrimaryDark"
            app:ss_textSize="20sp" />


    </RelativeLayout>


</FrameLayout>