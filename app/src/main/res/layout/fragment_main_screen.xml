<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Fragments.MainScreenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/signOut"
                android:layout_width="54dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/poweroff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/miniPP"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/whiteavatar" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_light"
            android:text="Available Limit"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sumMoney"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:fontFamily="@font/raleway_extrabold"
                android:text="50.25"
                android:maxLength="5"
                android:textAlignment="textEnd"
                android:textColor="@color/colorAccent"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="46dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_extrabold"
                android:gravity="bottom"
                android:text="â‚º"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/turkishLira"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:background="@drawable/tlchoosed" />

            <Button
                android:id="@+id/dollar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dollarnot" />

            <Button
                android:id="@+id/euro"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="93dp"
                android:background="@drawable/euronot" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:text="Recent Account Transactions"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>


</FrameLayout>