<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cast_expanded_controller_ad_container_white_stripe_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recordDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:text="09/09/1996"
            android:textAlignment="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recordTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:textAlignment="center"
            android:text="16:04"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recordStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:text="Failed"
            android:textAlignment="center"
            android:textColor="@color/fui_bgEmail"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recordIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:text="34.211.332.21"
            android:textAlignment="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>